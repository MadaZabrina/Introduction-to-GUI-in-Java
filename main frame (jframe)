    private void btn_submitActionPerformed(java.awt.event.ActionEvent evt) {                                           
        String name = tf_name.getText();
        
        ModelProgram mp = new ModelProgram();
        mp.setName (name);
        
        NameLogic logic = new NameLogic();
        String result = logic.returnName(mp);
        
        NameLogic logicnone = new NameLogic();
        String resultnone = logicnone.returnNone(mp);    
        
        if (tf_name.getText().length()==0){
            label_result.setText(resultnone);
        }
        else label_result.setText(result);
    }                                          

